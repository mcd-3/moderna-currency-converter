<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/fadeIn_to_start"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/fadeIn"
        motion:duration="2000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <!-- Headers -->
           <KeyAttribute
               motion:motionTarget="@+id/header_top_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_top_text"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_top_text"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/header_top_text"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/header_bottom_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_bottom_text"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_bottom_text"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/header_bottom_text"
               motion:framePosition="100"
               android:alpha="1" />

           <!-- Form -->
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="35"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="65"
               android:alpha="0.45" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="100"
               android:alpha="1" />
       </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/start_to_end"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1250">
        <KeyFrameSet>
            <!-- Header -->
            <KeyAttribute
                motion:motionTarget="@+id/header_top_text"
                motion:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/header_top_text"
                motion:framePosition="30"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/header_top_text"
                motion:framePosition="100"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/header_bottom_text"
                motion:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/header_bottom_text"
                motion:framePosition="30"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/header_bottom_text"
                motion:framePosition="100"
                android:alpha="0.0" />

            <!-- Body -->
            <KeyAttribute
                motion:motionTarget="@+id/results_li"
                motion:framePosition="0"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/results_li"
                motion:framePosition="50"
                android:alpha="0.45" />
            <KeyAttribute
                motion:motionTarget="@+id/results_li"
                motion:framePosition="100"
                android:alpha="1.0" />


            <!-- Footer -->
            <KeyAttribute
                motion:motionTarget="@+id/paragraph_text"
                motion:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/paragraph_text"
                motion:framePosition="30"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/paragraph_text"
                motion:framePosition="100"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bank_text"
                motion:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bank_text"
                motion:framePosition="30"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bank_text"
                motion:framePosition="100"
                android:alpha="0.0" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/fadeIn">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp"
            android:id="@+id/header_top_text"
            motion:layout_constraintHorizontal_bias="0.498" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintHorizontal_bias="0.503"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="260dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/currency_edit_text"
            motion:layout_constraintTop_toBottomOf="@+id/calculation_header_text"
            android:layout_marginTop="24dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/header_bottom_text"
            motion:layout_editor_absoluteY="187dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.519"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/header_top_text" />
        <Constraint
            motion:layout_constraintVertical_bias="0.023"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.505"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/calculation_header_text" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="108dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.497"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/bank_text" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/date_text"
            motion:layout_constraintVertical_bias="0.976"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/update_text"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintBottom_toTopOf="@+id/date_text" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/results_li"
            android:layout_marginTop="52dp"
            motion:layout_constraintTop_toBottomOf="@+id/submit_button"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0" />
    </ConstraintSet>
</MotionScene>