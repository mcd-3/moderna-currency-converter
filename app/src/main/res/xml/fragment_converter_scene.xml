<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/fadeIn_to_start"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/fadeIn"
        motion:duration="2000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <!-- Top part: header text-->
           <KeyAttribute
               motion:motionTarget="@+id/header_top_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_top_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_bottom_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_bottom_text"
               motion:framePosition="25"
               android:alpha="0.0" />

           <!-- Middle Part: input form-->
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="50"
               android:alpha="0.0" />

           <!-- Bottom part: notices-->
           <KeyAttribute
               motion:motionTarget="@+id/paragraph_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/paragraph_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/paragraph_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/paragraph_text"
               motion:framePosition="75"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/bank_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/bank_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/bank_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/bank_text"
               motion:framePosition="75"
               android:alpha="0.0" />
       </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/fadeIn">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.23000002"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/header_top_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.26999998"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/header_bottom_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.47000003"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/currency_edit_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.57"
            motion:layout_constraintHorizontal_bias="0.25"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/currency_button_left" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.57"
            motion:layout_constraintHorizontal_bias="0.746"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/currency_button_right" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="164dp"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.73"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.497"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/submit_button" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.57"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/swap_image_view" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.93"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/paragraph_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.97"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bank_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.51"
            motion:layout_constraintHorizontal_bias="0.224"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/from_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.51"
            motion:layout_constraintHorizontal_bias="0.783"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/to_text" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toBottomOf="parent"
            android:id="@+id/results_li" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>