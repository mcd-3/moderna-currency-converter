<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/fadeIn_to_start"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/fadeIn"
        motion:duration="2000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <!-- Top part: header text-->
           <KeyAttribute
               motion:motionTarget="@+id/header_top_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_top_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_bottom_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/header_bottom_text"
               motion:framePosition="25"
               android:alpha="0.0" />

           <!-- Middle Part: input form-->
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_edit_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/from_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/to_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_left"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/currency_button_right"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/swap_image_view"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/submit_button"
               motion:framePosition="50"
               android:alpha="0.0" />

           <!-- Bottom part: notices-->
           <KeyAttribute
               motion:motionTarget="@+id/paragraph_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/paragraph_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/paragraph_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/paragraph_text"
               motion:framePosition="75"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/bank_text"
               motion:framePosition="0"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/bank_text"
               motion:framePosition="25"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/bank_text"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/bank_text"
               motion:framePosition="75"
               android:alpha="0.0" />
       </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/start_to_end"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1250">
        <KeyFrameSet>
            <!-- Top part -->
            <KeyAttribute
                motion:motionTarget="@+id/header_top_text"
                motion:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/header_top_text"
                motion:framePosition="15"
                android:alpha="0.3" />
            <KeyAttribute
                motion:motionTarget="@+id/header_top_text"
                motion:framePosition="100"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/header_bottom_text"
                motion:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/header_bottom_text"
                motion:framePosition="15"
                android:alpha="0.3" />
            <KeyAttribute
                motion:motionTarget="@+id/header_bottom_text"
                motion:framePosition="100"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/calculation_header_text"
                motion:framePosition="0"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/calculation_header_text"
                motion:framePosition="45"
                android:alpha="0.3" />
            <KeyAttribute
                motion:motionTarget="@+id/calculation_header_text"
                motion:framePosition="100"
                android:alpha="1.0" />

            <!-- Bottom part -->
            <KeyAttribute
                motion:motionTarget="@+id/paragraph_text"
                motion:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/paragraph_text"
                motion:framePosition="15"
                android:alpha="0.3" />
            <KeyAttribute
                motion:motionTarget="@+id/paragraph_text"
                motion:framePosition="100"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bank_text"
                motion:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bank_text"
                motion:framePosition="15"
                android:alpha="0.3" />
            <KeyAttribute
                motion:motionTarget="@+id/bank_text"
                motion:framePosition="100"
                android:alpha="0.0" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/fadeIn">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.23000002"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/header_top_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.26999998"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/header_bottom_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.47000003"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/currency_edit_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.57"
            motion:layout_constraintHorizontal_bias="0.25"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/currency_button_left" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.57"
            motion:layout_constraintHorizontal_bias="0.746"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/currency_button_right" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="164dp"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.73"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.497"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/submit_button" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.57"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/swap_image_view" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.93"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/paragraph_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.97"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bank_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.51"
            motion:layout_constraintHorizontal_bias="0.224"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/from_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.51"
            motion:layout_constraintHorizontal_bias="0.783"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/to_text" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toBottomOf="parent"
            android:id="@+id/results_li" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"
            motion:layout_constraintVertical_bias="0.922"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/update_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"
            motion:layout_constraintVertical_bias="0.952"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.511"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/date_text" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="53dp"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toBottomOf="parent"
            android:id="@+id/results_li" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.977"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.497"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bank_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/paragraph_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.110000014"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/header_top_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.14999998"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/header_bottom_text" />
        <Constraint
            motion:layout_constraintVertical_bias="0.22000003"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="260dp"
            android:id="@+id/currency_edit_text" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.275"
            motion:layout_constraintHorizontal_bias="0.224"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/from_text" />
        <Constraint
            motion:layout_constraintVertical_bias="0.31"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.25"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/currency_button_left" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.275"
            motion:layout_constraintHorizontal_bias="0.780"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/to_text" />
        <Constraint
            motion:layout_constraintVertical_bias="0.31"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/swap_image_view" />
        <Constraint
            motion:layout_constraintVertical_bias="0.42"
            android:layout_height="58dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="256dp"
            android:id="@+id/submit_button" />
        <Constraint
            motion:layout_constraintVertical_bias="0.31"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.743"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/currency_button_right" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/results_li"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.702"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            motion:layout_constraintVertical_bias="0.100000024"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.496"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/calculation_header_text" />
        <Constraint
            motion:layout_constraintVertical_bias="0.886"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/update_text"
            motion:layout_constraintHorizontal_bias="0.497" />
        <Constraint
            motion:layout_constraintVertical_bias="0.935"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/date_text"
            motion:layout_constraintHorizontal_bias="0.497" />
    </ConstraintSet>
</MotionScene>